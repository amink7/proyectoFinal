{# templates/restaurante/carta.html.twig #}
{% extends 'restaurante/estructuraBase.html.twig' %}

{% block titulo %}Bienvenido a Casa Carmen{% endblock %}

{% block contenido %}
    <section data-stellar-background-ratio="0.5">
     <div class="container"> 

  {% for categoria in categorias %}
    <h2>{{categoria.nombre}}</h2>
     <table class="table">  
     <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Oferta</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
        {% for plato in categoria.platos %}
        
          
  
  <tbody>
    <tr>
      <td>{{plato.nombre}}</td>
      <td>{{plato.descripcion}}</td>
      <td>{{plato.precio}}€</td>
      <td>€</td>
      <td><a href="{{path('restaurante_actualizar', {'idPlato': plato.id})}}"><button class="submit" type="button" name="button">Editar</button></a> </td>
      <td><a href="{{path('restaurante_eliminar', {'idPlato': plato.id})}}"><button class="submit" type="button" name="button">Eliminar</button></a> </td>
      
    </tr>
    <br>
  
                         
                           
        {% endfor %}
          
        <div class="clearfix"> </div>
</tbody>
</table>
        {% endfor %}
</div>
  </section>
{% endblock %}

{% block css %}
        {{parent()}}
        <style>
        .custom-navbar .navbar-brand {
    color: black !important;
    font-size: 18px;
    font-weight: bold;
}

        .custom-navbar .nav li a {
    color: black !important;
}
        </style>
{% endblock %}